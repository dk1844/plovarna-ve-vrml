# PARSOL

DEF parasol Group {
	children [
		Transform {
			translation	0 0.945 0

			children Shape {
				geometry Cylinder {
					radius 0.01
					height 1.89
					top	FALSE
					bottom FALSE
				}
			}
		}

		Transform {
			translation	0 1.6 0

			children Shape {
				appearance Appearance { material Material { } }
					
				geometry Extrusion {
					crossSection [ -1 -.29, -.11 0, -.1 0, -1 -.3, -1 -.29 ]
					spine [1 0 0 , 0.707 0 0.707 , 0 0 1 ,-0.707 0 0.707 ,
							-1 0 0 ,-0.707 0 -0.707 , 0 0 -1 ,0.707 0 -0.707 ,1 0 0] 
				} 
			} 

		} 
	]
}


# HOLDER

DEF	holder Group {
	children [
		Transform {
			translation	0 .01 0

			children Shape {
				geometry Cylinder {
					radius .15
					height .02
					bottom FALSE
				}
			}
		}

		Transform {
			translation	0 .08 0

			children Shape {
				geometry Cylinder {
					radius .025
					height .16
					bottom FALSE
				}
			}
		}
	]
}


# TABLE

DEF table Group {
	children [
		Transform {
			translation 0 .69 0

			children Shape {
				geometry Cylinder {
					height .06
					radius .45
				}
			}
		}

		Group {
			children [
				DEF blockfoot Transform {
					translation	.35 .345 0

					children Shape {

						geometry Cylinder {
							radius .04
							height .69
							top	FALSE
							bottom FALSE
						}
					}
				}

				Transform {
					rotation 0 1 0 1.57

					children USE blockfoot
				}

				Transform {
					rotation 0 1 0 -1.57

					children USE blockfoot
				}

				Transform {
					rotation 0 1 0 3.14

					children USE blockfoot
				}
			]
		}
	]
}


# CHAIR
Transform {
	translation	2 0 0

	children DEF chair Group	{
		children [
			Transform {
				translation	0 .42 0

				children [
					DEF seat Group {
						children [
								Transform {	  
								children DEF seatBig Shape {
									geometry Box {
										size .42 .02 .06
										}
								}
							}

							Transform {
								translation	0 0 .06
					
								children DEF seatSmall Shape {
									geometry Box {
										size .42 .02 .04
									}
								}	 
							}

							Transform {
								translation	0 0 .11
	
								children USE seatSmall
							}

							Transform {
								translation	0 0 .16

								children USE seatSmall
							}

							Transform {
								translation	0 0 .21

								children USE seatSmall
							}

							Transform {
								translation	0 0 .27

								children USE seatBig
							}
						]
					}
				]
			}

			Transform {
				rotation 1 0 0 1.227
				translation	0 .828 -.181

				children DEF backrest Group {
					children [
						USE seatBig

						Transform {
							translation	0 0 .07

							children USE seatSmall
						}

						Transform {
							translation	0 0 .13

							children USE seatSmall
						}

						Transform {
							translation	0 0 .20

							children USE seatBig
						}
					]
				}
			}

			DEF	legs Group {
				children [
					Transform {
						translation	.19 0 0

						children [
							DEF	oneSideLeg Group {
								children [ 
									Transform {
										translation	-.02 0 -.03

										children Shape {
											appearance Appearance { material Material { } }
					
											geometry Extrusion {
												crossSection [ -.01 -.01, -.01 .01, .01 .01, .01 -.01, -.01 -.01 ]
												spine [  0 0 0, 0 .43 .33]
											}
										}
									}

									Transform {
										translation	0 0 .27

										children Shape {
											appearance Appearance { material Material { } }
					
											geometry Extrusion {
												crossSection [ -.01 -.01, -.01 .01, .01 .01, .01 -.01, -.01 -.01 ]
												spine [ 0 0 0, 0 .43 -.33, 0 .85 -.48 ]
											} 
										}
									}
								]
							}

							Transform {
								translation	-.38 0 0									  

								children USE oneSideLeg
							}
						]
					}

					DEF join Transform {
						rotation 0 0 1 1.57
						translation	0 .08 .21

						children Shape	{
							geometry Cylinder {
								radius 0.005
								height .5#.36
							}
						}
					}

					Transform {
						translation	0 0 -.18

						children USE join
					}

					Transform {
						translation	0 .3 .05

						children USE join
					}
				]
			}
		]
	}
}

Transform {
	translation	1 0 -2
	rotation 0 1 0 1

	children USE chair
}