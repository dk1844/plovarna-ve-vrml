#VRML V2.0 utf8

Background {
	skyColor [ 0 1 1, 1.0 1.0 1.0 ]
	skyAngle 1.6
	groundColor [ 1 1 1, 0.8 0.8 0.8, 0.2 0.2 0.2 ]
	groundAngle [ 1.2, 1.57 ]
	backUrl "..\img\textures\P1010220.jpg"
	frontUrl "..\img\textures\P1010220.jpg"			
	leftUrl "..\img\textures\P1010220.jpg"
	rightUrl "..\img\textures\P1010220.jpg"
	bottomUrl "..\img\textures\GrassSample.jpg"
}

Transform { children [	 
	Transform { children [   # Click flag and hold to see Night sky
		DEF TS TouchSensor {}
			Shape {                # Flag and flag-pole at origin
				appearance DEF A Appearance {
					material Material {}
					texture ImageTexture {
						url "..\img\textures\GrassSample.jpg"
						repeatS TRUE
						repeatT TRUE
					}
				}

				geometry IndexedFaceSet {
					coord Coordinate {
						point [ -.1 0 -.1, 0 0 .1, .1 0 -.1,
								-.1 3 -.1, 0 3 .1, .1 3 -.1,
								0.1 2.4 0, .1 2.9 0, -1.4 2.65 -.8 ]
					}

					coordIndex [ 0 1 4 3 -1  1 2 5 4 -1  2 0 3 5 -1  3 4 5 -1 6 7 8 ]
				}
			}

		Shape {                # Floor
			appearance USE A

			geometry IndexedFaceSet {
				coord Coordinate { point [ -2 0 -2, -2 0 2, 2 0 2, 2 0 -2 ] }
				coordIndex [ 0 1 2 3 ]
			}
		}

    	DirectionalLight { direction -0.707 -.707 0  intensity 1 }
	]}

	Viewpoint { position 0 1.5 10 }
]}
