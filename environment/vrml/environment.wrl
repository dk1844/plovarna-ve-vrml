# FLOOR
Shape {
	appearance DEF grass Appearance {
		material Material {}

		texture ImageTexture {
			url "../img/textures/03Water0010.jpg"
			url "../img/textures/GrassSample.jpg"
			repeatS TRUE
			repeatT TRUE
		}

		textureTransform TextureTransform {
			scale 10.0 10.0
			# scale it in X 10 times, in Y 10 times
		}

	}

	geometry IndexedFaceSet {
		coord Coordinate {
			point [ -50 0 -50, -50 0 50, 50 0 50, 50 0 -50 ]
		}

		coordIndex [ 0 1 2 3 ]
	}
}


# POOL
DEF TOBOGAN Group {
	children [	  
		Transform {
			translation	0 0 0

			children Shape {
				appearance DEF watter Appearance {
					material Material {}

					texture ImageTexture {
						url "../img/textures/03Water0010.jpg"
						repeatS TRUE
						repeatT TRUE
					}

					textureTransform TextureTransform {
						scale 10.0 10.0						   
					}
				}

				geometry Box {
					size 10 .1 10
				}					   
			}
		}

		Transform {
			translation	5.15 0 0

			children DEF border Shape {
				appearance DEF borderApp Appearance {
					material Material {}
				}

				geometry Box {
					size .3 .25 10
				}					   
			}
		}

		Transform {
			translation	-5.15 0 0

			children USE border
		}
		
	]
}	 

