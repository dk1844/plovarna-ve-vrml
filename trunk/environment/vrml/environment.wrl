# FLOOR

DEF floor Group {
	children [
		DEF grass01 Shape {
			appearance DEF grassApp Appearance {
				material Material {}

				texture ImageTexture {
					url "../img/textures/03Water0010.jpg"
					url "../img/textures/GrassSample.jpg"
					repeatS TRUE
					repeatT TRUE
				}

				textureTransform TextureTransform {
					scale 10.0 10.0
					# scale it in X 10 times, in Y 10 times
				}
			}

			geometry IndexedFaceSet {
				coord Coordinate {
					point [ 50 0 -50, 7.75 0 -14, 7.75 0 14, 50 0 50 ]
				}

				coordIndex [ 0 1 2 3]
			}
		}

		DEF grass02 Shape {
			appearance USE grassApp

			geometry IndexedFaceSet {
				coord Coordinate {
					point [ -50 0 -50, -7.75 0 -14, 7.75 0 -14, 50 0 -50 ]
				}

				coordIndex [ 0 1 2 3 ]
			}
		}

		Transform {
			rotation 0 1 0 3.14

			children  [	   
				USE grass01
				USE grass02
			]
		}
	]
}


# TILE

DEF tile Group {
	children [
		DEF tile01 Shape {
			appearance DEF tileApp Appearance {
				material Material {}

				texture ImageTexture {
					url "../img/textures/3334.jpg"
					repeatS TRUE
					repeatT TRUE
				}

				textureTransform TextureTransform {
					scale 17.5 17.5						   
				}
			}

			geometry IndexedFaceSet {
				coord Coordinate {
					point [ -7.75 0 -14, -7.75 0 14, -6.55 0 12.8, -6.55 0 -12.8 ]
				}

				coordIndex [ 0 1 2 3 ]
			}
		}

		DEF tile02 Shape {		  
			appearance Appearance {
				material Material {}

				texture ImageTexture {
					url "../img/textures/3334.jpg"
					repeatS TRUE
					repeatT TRUE
				}

				textureTransform TextureTransform {
					scale 10.0 10.0						   
				}
			}

			geometry IndexedFaceSet {
				coord Coordinate {
					point [ 6.55 0 12.8, -6.55 0 12.8, -7.75 0 14, 7.75 0 14 ]
				}

				coordIndex [ 0 1 2 3 ]
			}
		}

		Transform {
			rotation 0 1 0 3.14

