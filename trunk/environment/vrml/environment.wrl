			]
		}
	]
}


# POOL

DEF pool Group {
	children [	  
		Transform {
			translation	0 0 0

			children Shape {
				appearance DEF watter Appearance {
					material Material {}

					texture ImageTexture {
						url "../img/textures/723.jpg"
						repeatS TRUE
						repeatT TRUE
					}

					textureTransform TextureTransform {
						scale 40.0 40.0						   
					}
				}

				geometry IndexedFaceSet {
					coord Coordinate {
						point [ -6.25 0 -12.5, -6.25 0 12.5, 6.25 0 12.5, 6.25 0 -12.5 ]
					}

					coordIndex [ 0 1 2 3 ]
				}					   
			}
		}

		Transform {
			translation	6.4 0 0
			scale 1 1 25

			children DEF border Shape {	    
				appearance Appearance {
					material Material {}

					texture ImageTexture {
						url "../img/textures/RedTile.jpg"
						repeatS FALSE
						repeatT TRUE
					}

					textureTransform TextureTransform {
						scale 1.0 80
					}
				}

				geometry Box {
					size .3 .01 1
				}					   
			}
		}

		Transform {
			translation	-6.4 0 0
			scale 1 1 25

			children USE border
		}

		Transform {
			translation	0 0 -12.65
			scale 1 1 13.1
			rotation 0 1 0 1.57

			children USE border
		}

		Transform {
			translation	0 0 12.65
			scale 1 1 13.1
			rotation 0 1 0 1.57

			children USE border
		}
	]
}	 


